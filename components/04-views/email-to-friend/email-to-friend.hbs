<div class="page-wrapper">
    {{ render '@header' }}
    <div class="container">
        {{ render '@heading' title }}
        <form class="email-to-friend">
            <fieldset class="fieldset email-to-friend__fieldset">
                <legend class="heading heading--second-level">
                    {{ sender.label }}
                </legend>
                {{ render '@input' sender.name }}
                {{ render '@input' sender.email }}
                {{ render '@input--textarea' sender.message }}
            </fieldset>
            <fieldset class="fieldset email-to-friend__fieldset">
                <legend class="heading heading--second-level">
                    {{ invitee.label }}
                </legend>
                <div class="email-to-friend__options">
                    {{#each invitee.fieldsets }}
                        <div class="{{ class }}">
                            <fieldset class="fieldset email-to-friend__inner-fieldset">
                                {{ render '@input' name }}
                                {{ render '@input' email }}
                                {{ render '@button' remove }}
                            </fieldset>
                        </div>
                    {{/each }}
                </div>
                {{ render '@button' invitee.add }}
            </fieldset>
            {{ render '@button' send }}
            <span class="link email-to-friend__back">
                {{ back }}
            </span>
        </form>
    </div>
</div>

{{ render '@footer' }}
