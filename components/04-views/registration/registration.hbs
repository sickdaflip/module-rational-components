<div class="page-wrapper">
    {{ render '@header' }}
    <div class="container">
        {{ render '@heading' mainHeading }}
        <div class="row registration">
            <form class="col-xs-12 col-md-6 registration__content">
                <fieldset
                    class="
                        fieldset registration__fieldset
                        {{ personalSection.fieldset.class }}
                    "
                    {{ personalSection.fieldset.attributes }}
                >
                    <legend
                        class="
                            fieldset__legend registration__legend
                            {{ personalSection.legend.class }}
                        "
                        {{ personalSection.legend.attributes }}
                    >
                        {{ personalSection.legend.text }}
                    </legend>
                    {{ render '@divider' headingDivider }}
                    {{ render '@input' firstName }}
                    {{ render '@input' lastName }}
                    {{ render '@checkbox' newsletterCheckbox }}
                </fieldset>
                <fieldset
                    class="
                        fieldset registration__fieldset
                        {{ signInSection.fieldset.class }}
                    "
                    {{ signInSection.fieldset.attributes }}
                >
                    <legend
                        class="
                            registration__legend
                            {{ signInSection.legend.class }}
                        "
                        {{ signInSection.legend.attributes }}
                    >
                        {{ signInSection.legend.text }}
                    </legend>
                    {{ render '@divider' headingDivider }}
                    {{ render '@input' email }}
                    <div class="registration__password-wrapper">
                        {{ render '@input' password }}
                        {{ render '@password-strength' passwordStrength }}
                    </div>
                    {{ render '@input' passwordConfirmation }}
                </fieldset>
                {{ render '@button' registrationButton }}
            </form>
        </div>
    </div>
</div>

{{ render '@footer' }}
